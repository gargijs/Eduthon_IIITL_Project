<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    tools:context=".StudentLogin">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <TextView
            android:id="@+id/signin_text"
            android:layout_margin="20dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign In"
            android:textSize="25dp"


            />


        <EditText
            android:id="@+id/signin_email"
            android:layout_below="@id/signin_text"
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="68dp"

            android:hint="Email"
            android:inputType="textEmailAddress" />



        <EditText
            android:id="@+id/signin_pass"
            android:layout_margin="10dp"
            android:layout_below="@+id/signin_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:hint="Password"
            android:inputType="textPassword" />
        <Button
            android:id="@+id/signin_btn"
            android:layout_below="@+id/signin_pass"
            android:layout_margin="30dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="SignIn"
            android:textSize="20dp"
            android:background="@color/colorPrimaryDark"
            />

        <TextView
            android:id="@+id/signin_textView"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Don't Have an account?"
            android:textSize="20dp"

            android:layout_below="@+id/signin_btn"
            />
        <TextView
            android:id="@+id/signUP"
            android:textSize="20dp"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:textColor="@color/colorPrimaryDark"
            android:layout_toRightOf="@+id/signin_textView"

            android:layout_below="@+id/signin_btn"
            />



    </RelativeLayout>

</ScrollView>